---
import { Icon } from "astro-icon/components"
import type { SocialLink } from "~/data/site-info.js"

export type Props = {
  links: SocialLink[]
}

const { links } = Astro.props
---

{
  links.map((link) => (
    <a
      href={link.href}
      target="_blank"
      class="inline-flex items-center p-3 opacity-60 transition-opacity hover:opacity-100">
      <span class="sr-only">{link.text}</span>
      <Icon name={link.icon} class="size-5" aria-hidden="true" />
    </a>
  ))
}
