---
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"a">

const { href, ...attrs } = Astro.props
---

<a
  {...attrs}
  href={href}
  class="inline-flex items-center gap-x-1 text-inherit underline decoration-neutral-800/25 decoration-2 underline-offset-2 transition-colors hover:decoration-primary-600">
  <slot />
</a>
