<div class="space-y-2">
    {% for week in collections.weekly | reverse %}
    <article>
        <a href="{{ week.url }}" class="group flex items-center gap-5 transition-all">
            <div class="px-8 py-4 rounded-md text-center bg-gray-100 group-hover:bg-gray-200 dark:bg-gray-800 dark:group-hover:bg-gray-700">
                <span class="block text-sm text-gray-500">WEEK</span>
                <b class="block text-lg leading-snug text-rose-600 dark:text-rose-400">{{ week.data.week }}</b>
            </div>
            <h2 class="flex-1 text-sm md:text-base font-bold">{{ week.data.title }}</h2>
        </a>
    </article>
    {% endfor %}
</div>