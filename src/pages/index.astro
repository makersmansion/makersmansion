---
import { getCollection } from "astro:content"
import Layout from "~/layouts/Base.astro"
import Link from "~/components/Link.astro"
import { Icon } from "astro-icon/components"
import { Image } from "astro:assets"
import LinkButton from "~/components/LinkButton.astro"
import EddaAvatar from "~/images/edda.png"
import DripOGAvatar from "~/images/dripog.png"

import NewsletterEditionPreview from "~/components/NewsletterEditionPreview.astro"

const title = "AI meets Design"
const description =
  "We're a small team exploring AI assistants to refine everyday activities. Our core pursuit is understanding human-AI interactions, aiming to desing the next-gen user experiences."

const newsletter = await getCollection("newsletter")
const editions = newsletter
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 4)
---

<Layout title={title} description={description}>
  <section class="relative isolate mx-auto max-w-3xl px-6 py-20 sm:px-8">
    <h1 class="text-2xl font-bold tracking-tight [text-wrap:pretty] sm:text-4xl">
      AI <span class="text-primary-500">x</span> Design.
      <span class="text-neutral-500 dark:text-neutral-600">
        We design AI assistants to refine your everyday activities.
      </span>
    </h1>
  </section>
  <section class="mx-auto max-w-3xl px-6 py-20 sm:px-8">
    <h2 class="text-xl font-bold tracking-tight">AI assistants</h2>
    <div class="-mt-8 divide-y divide-neutral-900/10 *:mt-8 *:pt-8 dark:divide-neutral-100/5">
      <article class="@container">
        <div class="flex items-center gap-x-6">
          <div class="flex items-start gap-x-6">
            <figure
              class="relative isolate size-16 shrink-0 overflow-hidden rounded-lg bg-neutral-700 shadow-sm after:pointer-events-none after:absolute after:inset-0 after:rounded-lg after:border after:border-black/10 after:mix-blend-multiply dark:after:border-white/10">
              <Image src={EddaAvatar} alt="Edda" />
            </figure>
            <div class="flex-1">
              <h3 class="text-lg font-bold">Edda</h3>
              <p class="leading-6 text-neutral-700 [text-wrap:pretty] dark:text-neutral-400">
                Create killer presentations 10x faster. Begin with an idea and end up with a slide
                deck that resonates.
              </p>
            </div>
          </div>
          <LinkButton
            href="https://chat.openai.com/g/g-WWJVCQZgC-edda"
            variant="neutral"
            text="Open">
            <Icon name="ri:openai-fill" slot="icon-start" class="size-5" />
          </LinkButton>
        </div>
      </article>
      <article class="@container">
        <div class="flex items-center gap-x-6">
          <div class="flex items-start gap-x-6">
            <figure
              class="relative isolate size-16 shrink-0 overflow-hidden rounded-lg bg-neutral-700 shadow-sm after:pointer-events-none after:absolute after:inset-0 after:rounded-lg after:border after:border-black/10 after:mix-blend-multiply dark:after:border-white/10">
              <Image src={DripOGAvatar} alt="Drip OG" />
            </figure>
            <div class="flex-1">
              <h3 class="text-lg font-bold">Drip OG ‚ùñ</h3>
              <p class="leading-6 text-neutral-700 [text-wrap:pretty] dark:text-neutral-400">
                Upload selfies to check your outfit and get suggestions on style and colors.
              </p>
            </div>
          </div>
          <LinkButton
            href="https://chat.openai.com/g/g-My90KcA8a-drip-og"
            variant="neutral"
            text="Open">
            <Icon name="ri:openai-fill" slot="icon-start" class="size-5" />
          </LinkButton>
        </div>
      </article>
    </div>
  </section>
  <section class="mx-auto max-w-3xl px-6 py-20 sm:px-8">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-bold tracking-tight">Makers Newsletter</h2>

      <a
        href="/newsletter/"
        class="inline-flex items-center gap-x-1.5 text-sm font-semibold text-neutral-700 transition-colors hover:text-inherit dark:text-neutral-400">
        View all
        <Icon name="ri:arrow-right-line" class="size-5" />
      </a>
    </div>
    <div class="-mt-8 divide-y divide-neutral-900/10 *:mt-8 *:pt-8 dark:divide-neutral-100/5">
      {editions.map((edition) => <NewsletterEditionPreview edition={edition} />)}
    </div>
    <p class="mt-8 text-center"></p>
  </section>
</Layout>
