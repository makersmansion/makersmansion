---
layout: base
---
{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(site.url) }}{%- endset -%}

<p class="mb-16 font-serif">
    <a href="/cognitive-biases/" class="underline underline-offset-2 decoration-neutral-medium hover:decoration-primary">
        <strong>42 Biases to be aware of</strong>
    </a>
</p>


<article class="max-w-none mb-20">

    <header>
        <h1 class="text-heading-lg">{{ title }}</h1>
        <p class="mt-2 text-lead">{{ description }}</p>
        <div class="mt-6 md:mt-10 flex flex-wrap items-center gap-3 sm:gap-5 text-caption uppercase text-neutral-medium tracking-widest">
            {% for tag in tags %}
            <span class="flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" fill="none" class="w-5 h-5">
                    <circle cx="15" cy="9" r="1" fill="currentColor"></circle>
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 4.75H19.25V12L12.5535 18.6708C11.7544 19.4668 10.4556 19.445 9.68369 18.6226L5.28993 13.941C4.54041 13.1424 4.57265 11.8895 5.36226 11.1305L12 4.75Z"></path>
                </svg>
                {{ tag }}
            </span>
            {% endfor %}
            <span class="flex-1 border-t border-dashed border-neutral-weak"></span>
        </div>
    </header>

    <div class="
        mt-6 md:mt-10 max-w-none 
        prose prose-neutral   
        prose-h2:text-heading 
        prose-p:text-body 
        prose-a:underline prose-a:underline-offset-2 prose-a:decoration-neutral-medium hover:prose-a:decoration-primary 
        prose-blockquote:not-italic 
        prose-hr:border-dashed
    ">

        {{content | safe }}
    
    </div>

</article>

