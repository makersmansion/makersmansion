<article class="mx-auto max-w-lg sm:max-w-xl md:max-w-2xl lg:max-w-4xl mt-8 md:mt-20 px-6 sm:px-0">

    <header class="lg:text-center">
        <h1 class="font-serif text-heading-lg">{{ title }}</h1>
        <div class="mt-5 text-caption text-neutral-medium">
            <time datetime="{{ date | dateToISO }}" pubdate="pubdate">{{ date | readableDate('dd LLL yyyy') }}</time>
            <address class="inline ml-5"><a rel="author" href="https://helloraz.com" target="_blank" class="not-italic">Raz Tirboaca</a></address>
        </div>
        <hr class="mt-6 md:mt-8 w-12 border-t-2 border-neutral-weak lg:mx-auto">
    </header>

    <div class="
        mx-auto mt-8 lg:mt-12 max-w-2xl 
        prose prose-neutral 
        prose-h2:text-heading 
        prose-p:text-body 
        prose-ul:text-body 
        prose-ol:text-body 
        prose-a:underline prose-a:underline-offset-2 prose-a:decoration-neutral-medium hover:prose-a:decoration-primary 
        prose-blockquote:not-italic 
        prose-hr:border-dashed 
        prose-img:rounded dark:prose-img:opacity-80  
        prose-figcaption:mt-2 prose-figcaption:px-3 prose-figcaption:text-center 
        ">

        {{content | safe }}
        
        <hr>
    </div>

</article>

