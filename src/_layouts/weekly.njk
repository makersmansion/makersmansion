layout: base
---

<div class="md:flex justify-between items-baseline pb-2 mb-10 border-b-2 border-gray-100 dark:border-gray-800">
    <p class="font-extrabold"><a href="{{ site.url }}">Makers Weekly Newsletter</a></p>
    <p class="text-sm text-gray-500">Subscribe on 
        <a href="https://www.linkedin.com/newsletters/makers-weekly-6944580848146903040/" target="_blank" class="text-gray-900 dark:text-gray-100">Linkedin</a> &middot; 
        <!--a href="#" target="_blank" class="text-gray-900 dark:text-gray-100">Email</a> &middot; -->
        <a href="https://makersmansion.xyz/feed.xml" target="_blank" class="text-gray-900 dark:text-gray-100">RSS</a>
    </p>
</div>

<article>

    <header class="flex items-center gap-5">
        <div class="px-8 py-4 rounded-md text-center bg-gray-100 dark:bg-gray-800">
            <span class="block text-sm text-gray-500">WEEK</span>
            <b class="block text-lg leading-snug text-rose-600 dark:text-rose-400">{{ week }}</b>
        </div>
        <h1 class="flex-1 text-sm md:text-base font-bold">{{ title }}</h1>
    </header>

    <main class="mt-10 prose dark:prose-invert prose-h2:text-lg">
        {{content | safe }}
    </main>

    <footer class="mt-10">
        <div class="flex items-center gap-5 mb-5">
            <span class="w-full border-t border-dashed border-gray-200 dark:border-gray-800"></span>
            <time datetime="{{ date | dateToISO }}" pubdate="pubdate" class="flex-none text-sm text-gray-500">{{ date | readableDate('dd LLL yyyy') }}</time>
            <span class="w-full border-t border-dashed border-gray-200 dark:border-gray-800"></span>
        </div>
        <p class="text-center">
            <a href="{{ linkedinURL }}" class="inline-flex items-center gap-2 px-6 py-2 font-bold bg-rose-600 text-white rounded-full shadow-sm dark:bg-rose-400 dark:text-gray-900" target="_blank">
