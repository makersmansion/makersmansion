---
layout: base
---
{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(site.url) }}{%- endset -%}

<article>

    <header>
        <h1 class="font-serif text-2xl leading-normal md:text-3xl md:leading-snug xl:text-4xl xl:leading-snug font-bold">{{ title }}</h1>
        <div class="mt-6 md:mt-10 flex flex-nowrap items-center gap-3 sm:gap-5 text-xs md:text-sm uppercase text-neutral-medium tracking-widest">
            <span class="flex-none">WEEK {{ week }}</span>
            <time datetime="{{ date | dateToISO }}" pubdate="pubdate" class="flex-none flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" fill="none" class="w-5 h-5 -mt-[1px]">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4.75 8.75C4.75 7.64543 5.64543 6.75 6.75 6.75H17.25C18.3546 6.75 19.25 7.64543 19.25 8.75V17.25C19.25 18.3546 18.3546 19.25 17.25 19.25H6.75C5.64543 19.25 4.75 18.3546 4.75 17.25V8.75Z"/>
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 4.75V8.25"/>
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 4.75V8.25"/>
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M7.75 10.75H16.25"/>
                </svg>
                {{ date | readableDate('dd LLL yyyy') }}
            </time>
            <address class="flex-none flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" fill="none" class="w-5 h-5">
                    <circle cx="12" cy="8" r="3.25" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"></circle>
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M6.8475 19.25H17.1525C18.2944 19.25 19.174 18.2681 18.6408 17.2584C17.8563 15.7731 16.068 14 12 14C7.93201 14 6.14367 15.7731 5.35924 17.2584C4.82597 18.2681 5.70558 19.25 6.8475 19.25Z"></path>
                </svg>
                <a rel="author" href="https://helloraz.com" target="_blank" class="not-italic">Raz Tirboaca</a>
            </address>
            <span class="w-full border-t border-dashed border-neutral-weak"></span>
        </div>
    </header>

    <div class="
        mt-10 max-w-none 
        prose prose-neutral md:prose-lg 
        prose-h2:text-xl prose-h2:font-bold md:prose-h2:text-2xl 
        prose-a:underline prose-a:underline-offset-2 prose-a:decoration-neutral-medium hover:prose-a:decoration-primary 
        prose-blockquote:not-italic 
        prose-hr:border-dashed
        ">

        {{content | safe }}

    </div>

</article>

<aside id="subscribe" class="
    my-10 py-6 sm:px-8 md:mt-20 md:px-16 md:py-10 
    sm:bg-neutral-weakest 
    border-t-4 border-neutral-weak 
    sm:rounded-sm
    ">
    <h3 class="font-serif text-xl md:text-2xl font-bold">Get it in your Inbox</h3>
    <form action="https://xyz.us11.list-manage.com/subscribe/post?u=6dc0c39e37a97ab5a03b51343&amp;id=5c2e4bb0d0" method="post" class="mt-6 max-w-lg flex flex-nowrap justify-center items-center">
        <input type="email" id="mce-EMAIL" name="EMAIL" placeholder="Type your email..." required class="form-input flex-1 px-3 py-2 text-neutral-strong bg-neutral border-2 border-r-0 border-neutral-strong focus:border-neutral-strong focus:ring-0 rounded-l-sm">
        <button type="submit" name="subscribe" class="flex-none px-4 py-2 font-semibold text-neutral bg-neutral-strong border-2 border-l-0 border-neutral-strong rounded-r-sm">
            Subscribe
        </button>
    </form>
    <p class="mt-4 text-sm text-neutral-medium">
        Sent every Sunday morning by <a href="https://helloraz.com" target="_blank" class="underline underline-offset-2 decoration-neutral-medium font-semibold hover:text-neutral-strong">Raz Tirboaca</a>
    </p>
</aside>